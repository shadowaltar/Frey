<mui:ModernWindow x:Class="Automata.Dashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        LogoData=""
        Title="Dashboard" IsTitleVisible="True"
        ContentSource="/Pages/Home.xaml">
    <mui:ModernWindow.TaskbarItemInfo>
        <TaskbarItemInfo ThumbnailClipMargin="60 60 60 60"></TaskbarItemInfo>
    </mui:ModernWindow.TaskbarItemInfo>
    <mui:ModernWindow.MenuLinkGroups>
        <mui:LinkGroup DisplayName="welcome">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="home" Source="/Pages/Home.xaml" />
                <mui:Link DisplayName="misc" Source="/Pages/FirstPage.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
        <mui:LinkGroup DisplayName="settings" GroupName="settings">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="software" Source="/Pages/Settings.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
    </mui:ModernWindow.MenuLinkGroups>
    
    <mui:ModernWindow.TitleLinks>
        <mui:Link DisplayName="settings" Source="/Pages/Settings.xaml" />
        <mui:Link DisplayName="FirstPage" Source="/Pages/FirstPage.xaml" />
    </mui:ModernWindow.TitleLinks>
</mui:ModernWindow>
