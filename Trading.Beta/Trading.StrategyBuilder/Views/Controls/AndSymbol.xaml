<UserControl x:Class="Trading.StrategyBuilder.Views.Controls.AndSymbol"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="18"
             Height="18">
    <Canvas>
        <Path Fill="White"
              Stroke="Black"
              StrokeThickness="2">
            <Path.Data>
                <GeometryGroup>
                    <!--
                        <LineGeometry StartPoint="7,4" EndPoint="7,14" />
                        <LineGeometry StartPoint="11,4" EndPoint="11,14" />
                    -->
                    <EllipseGeometry Center="9,9"
                                     RadiusX="8"
                                     RadiusY="8" />
                </GeometryGroup>
            </Path.Data>
        </Path>
        <TextBlock Canvas.Left="4"
                   Canvas.Top="1"
                   FontFamily="Arial"
                   FontSize="14">
            &amp;
        </TextBlock>
    </Canvas>
</UserControl>
