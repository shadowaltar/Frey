<UserControl x:Class="Trading.StrategyBuilder.Views.EnterSetupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:controls="clr-namespace:WPFExtensions.Controls;assembly=WPFExtensions"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:graphsharp="clr-namespace:GraphSharp.Controls;assembly=GraphSharp.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:v="clr-namespace:Trading.StrategyBuilder.Core.Visualization"
             d:DesignHeight="320"
             d:DesignWidth="640"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style BasedOn="{StaticResource TextBoxStyle}" TargetType="TextBox" />
        <Style BasedOn="{StaticResource LabelTextStyle}" TargetType="Label" />
        <Style BasedOn="{StaticResource DropdownTextStyle}" TargetType="ComboBox" />

        <DataTemplate x:Key="demoTemplate" DataType="v:ActionVertex">
            <StackPanel Margin="5"
                        Orientation="Horizontal"
                        cal:Message.Attach="[MouseDown]=[OnSelected]">
                <TextBlock Foreground="White" Text="{Binding Path=Formula, Mode=OneWay}" />
            </StackPanel>
        </DataTemplate>

        <Style TargetType="{x:Type graphsharp:VertexControl}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type graphsharp:VertexControl}">
                        <Border Background="Black"
                                BorderBrush="White"
                                BorderThickness="2"
                                CornerRadius="10,10,10,10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter AllowDrop="True"
                                              Content="{TemplateBinding Vertex}"
                                              ContentTemplate="{StaticResource demoTemplate}" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="graphsharp:EdgeControl">
            <Style.Resources>
                <ToolTip x:Key="ToolTipContent">
                    <StackPanel>
                        <TextBlock FontWeight="Bold" Text="Edge.ID" />
                        <TextBlock Text="{Binding ID}" />
                    </StackPanel>
                </ToolTip>
            </Style.Resources>
            <Setter Property="ToolTip" Value="{StaticResource ToolTipContent}" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <DockPanel LastChildFill="True">
            <StackPanel Margin="10,10,0,10" Orientation="Vertical">
                <Button x:Name="AddFilter"
                        Style="{StaticResource CircleFilterButtonStyle}"
                        ToolTip="Add a filter" />
                <Button x:Name="AddAction"
                        Style="{StaticResource CircleAddButtonStyle}"
                        ToolTip="Add an action" />
                <Button x:Name="EditStep"
                        Style="{StaticResource CircleEditButtonStyle}"
                        ToolTip="Edit a filter / action" />
                <Button x:Name="LinkStep"
                        Style="{StaticResource CircleConnectButtonStyle}"
                        ToolTip="Link the two steps" />
                <Button x:Name="RemoveStep"
                        Style="{StaticResource CircleDeleteButtonStyle}"
                        ToolTip="Remove a step" />
            </StackPanel>
            <v:StrategyGraphLayout x:Name="graphLayout"
                                   Margin="0,10,10,10"
                                   Graph="{Binding Path=Graph}"
                                   HighlightAlgorithmType="Simple"
                                   IsHitTestVisible="True"
                                   LayoutAlgorithmType="{Binding Path=LayoutAlgorithmType,
                                                                 Mode=OneWay}"
                                   OverlapRemovalAlgorithmType="FSA" />
        </DockPanel>
    </Grid>
</UserControl>
