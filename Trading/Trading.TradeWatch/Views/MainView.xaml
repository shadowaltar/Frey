                            <!--  the data series  -->
                            <telerik:LineSeries CategoryBinding="At"
                                                ItemsSource="{Binding FifthSecurityPrices}"
                                                Stroke="#8EC4B7"
                                                ValueBinding="Close">
                                <!--  fake data  -->
                                <telerik:LineSeries.DataPoints>
                                    <telerik:CategoricalDataPoint Category="{x:Type sys:DateTime}" Value="10" />
                                </telerik:LineSeries.DataPoints>
                            </telerik:LineSeries>
                        </telerik:RadCartesianChart.Series>
                        <telerik:RadCartesianChart.HorizontalAxis>
                            <!--  x axis  -->
                            <telerik:DateTimeContinuousAxis GapLength="0.98"
                                                            LabelTemplate="{StaticResource AxisLabelTemplate}"
                                                            MajorStep="6"
                                                            MajorStepUnit="Month"
                                                            PlotMode="OnTicksPadded" />
                        </telerik:RadCartesianChart.HorizontalAxis>
                        <telerik:RadCartesianChart.VerticalAxis>
                            <telerik:LinearAxis LabelTemplate="{StaticResource MainPriceChartVerticalAxisLabelTemplate}"
                                                MajorStep="0"
                                                TickThickness="0" />
                        </telerik:RadCartesianChart.VerticalAxis>
                        <telerik:RadCartesianChart.Grid>
                            <telerik:CartesianChartGrid MajorLinesVisibility="XY"
                                                        MajorXLinesRenderMode="All"
                                                        StripLinesVisibility="None" />
                        </telerik:RadCartesianChart.Grid>
                    </telerik:RadCartesianChart>
                </Grid>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel Margin="6,0">
                    <TextBlock>Holdings Performance</TextBlock>
                </StackPanel>
                <DataGrid x:Name="HoldingsPerformances"
                          Grid.Row="1"
                          Grid.Column="0"
                          Margin="6,0"
                          AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Security.Name}" Header="Security" />
                        <DataGridTextColumn Binding="{Binding BloombergCode}" Header="BBC" />
                        <DataGridTextColumn Binding="{Binding Position.Quantity}" Header="Qty" />
                        <DataGridTextColumn Binding="{Binding Position.Cost}" Header="Cost" />
                        <DataGridTextColumn Binding="{Binding Position.Price}" Header="Price" />
                        <DataGridTextColumn Binding="{Binding Price.Close}" Header="Price Now" />
                        <DataGridTextColumn Binding="{Binding PriceChange}" Header="Price Chg" />
                        <DataGridTextColumn Binding="{Binding PriceChangePercentage}" Header="Price Chg%" />
                        <DataGridTextColumn Binding="{Binding Position.ProfitLoss}" Header="P/L" />
                        <DataGridTextColumn Binding="{Binding Weight}" Header="Wt%" />
                        <DataGridTextColumn Binding="{Binding MarketValue}" Header="Mkt Value" />
                        <DataGridTextColumn Binding="{Binding Position.Time}" Header="Order Time" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</controls:MetroWindow>

