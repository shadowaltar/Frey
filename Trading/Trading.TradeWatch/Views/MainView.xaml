                </Grid>

                <!--  5nd Price Chart  -->
                <Grid Grid.Row="1"
                      Grid.Column="1"
                      Margin="6"
                      Background="#22DDDDDD">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
